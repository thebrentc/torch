<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.theb.torch" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Torch</name>
    <description>
        A torch.
    </description>
    <author email="thebrentc@gmail.com" href="http://theb.xyz">
        thebrentc
    </author>
    <icon src="www/img/logo.png" platform="android" width="94" height="88" density="mdpi" />    
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
